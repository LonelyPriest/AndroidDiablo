<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.diablo.dt.diablo.fragment.stock.StockInUpdate">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_landscape_black_24dp"
        android:drawableLeft="@drawable/ic_landscape_black_24dp"
        android:text="@string/firm"/>
    <AutoCompleteTextView
        android:id="@+id/stock_select_firm"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/please_input_firm"
        android:completionThreshold="1"
        android:gravity="center_horizontal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:layout_weight="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:drawableLeft="@drawable/ic_place_black_24dp"
        android:layout_weight="0.2"
        android:text="@string/shop"/>
    <EditText
        android:id="@+id/stock_select_shop"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="@string/shop"
        android:layout_weight="0.8" />


    <ImageButton
        android:id="@+id/stock_select_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_date_range_black_24dp"
        android:contentDescription="@string/date"/>
    <EditText
        android:id="@+id/stock_selected_date"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:inputType="datetime"
        android:layout_weight="0.8"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_person_black_24dp"
        android:contentDescription="@string/employee"/>
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/stock_select_employee"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:layout_weight="0.8"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_local_airport_black_24dp"
        android:drawableLeft="@drawable/ic_local_airport_black_24dp"
        android:text="@string/amount" />
    <EditText
        android:id="@+id/stock_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="@string/amount"
        android:textColor="@color/red"
        android:gravity="center_horizontal"
        android:layout_weight="0.8"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:text="@string/should_pay" />
    <EditText
        android:id="@+id/stock_should_pay"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/should_pay"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:text="@string/cash" />
    <EditText
        android:id="@+id/stock_cash"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/cash"
        android:textColor="@color/red"
        android:selectAllOnFocus="true"
        android:inputType="numberSigned|numberDecimal"
        android:gravity="center_horizontal"
        android:layout_weight="0.8"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_insert_comment_black_24dp"
        android:contentDescription="@string/comment" />
    <EditText
        android:id="@+id/stock_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/comment"
        android:layout_weight="0.8"/>

  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:text="@string/firm_balance" />
    <EditText
        android:id="@+id/firm_balance"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/firm_balance"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:text="@string/has_pay" />
    <EditText
        android:id="@+id/stock_has_pay"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/has_pay"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_credit_card_black_24dp"
        android:drawableLeft="@drawable/ic_credit_card_black_24dp"
        android:text="@string/card" />
    <EditText
        android:id="@+id/stock_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/card"
        android:textColor="@color/red"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_directions_subway_black_24dp"
        android:contentDescription="@string/cost_on_stock"/>
    <android.support.v7.widget.AppCompatSpinner
        android:id="@+id/stock_select_extra_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:focusable="false"
        android:spinnerMode="dropdown"
        android:layout_weight="0.8"/>

  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:drawableLeft="@drawable/ic_attach_money_black_24dp"
        android:text="@string/firm_accBalance" />
    <EditText
        android:id="@+id/firm_accBalance"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/firm_accBalance"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_remove_circle_outline_black_24dp"
        android:drawableLeft="@drawable/ic_remove_circle_outline_black_24dp"
        android:text="@string/verificate"/>
    <EditText
        android:id="@+id/stock_verificate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/verificate"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        android:layout_weight="0.8"/>

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_network_wifi_black_24dp"
        android:drawableLeft="@drawable/ic_network_wifi_black_24dp"
        android:text="@string/wire" />
    <EditText
        android:id="@+id/stock_wire"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/wire"
        android:textColor="@color/red"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_attach_money_black_24dp"
        android:contentDescription="@string/cost_on_stock"/>
    <EditText
        android:id="@+id/stock_extra_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="@string/cost_on_stock"
        android:inputType="numberSigned|numberDecimal"
        android:layout_weight="0.8"/>
  </LinearLayout>

  <TableLayout
      android:id="@+id/t_stock_head"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
  </TableLayout>

  <ScrollView
      android:id="@+id/t_stock_scroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
    <TableLayout
        android:id="@+id/t_stock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>
  </ScrollView>

</LinearLayout>
