<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              tools:context="com.diablo.dt.diablo.fragment.retailer.DiabloRetailerNew">

  <!-- name -->
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">
    <ImageView android:layout_width="0dp"
               android:layout_height="wrap_content"
               android:src="@drawable/ic_star_black_24dp"
               android:scaleX="0.5"
               android:scaleY="0.5"
               android:layout_gravity="center"
               android:tint="@color/bpRed"
               android:contentDescription="@string/diablo_name"
               android:layout_weight="0.1"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/diablo_name"
              android:gravity="center"
              android:layout_weight="0.1"
              android:textSize="@dimen/label_font_size"
              android:textColor="@color/black"/>

    <EditText android:id="@+id/retailer_name"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="@string/input_retailer_name"
              android:inputType="text|textCapCharacters"
              android:textSize="@dimen/ampm_label_size"
              android:textColor="@color/bpblack"
              android:textStyle="bold"
              android:selectAllOnFocus="true"
              android:layout_weight="0.7"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>
  </LinearLayout>

  <!-- balance -->
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/diablo_arrears"
              android:gravity="center"
              android:layout_weight="0.1"
              android:textSize="@dimen/label_font_size"
              android:textColor="@color/black"/>

    <EditText android:id="@+id/retailer_balance"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="@string/please_input_arrears_balance"
              android:inputType="number|numberDecimal|numberSigned"
              android:textSize="@dimen/ampm_label_size"
              android:textColor="@color/red"
              android:textStyle="bold"
              android:selectAllOnFocus="true"
              android:layout_weight="0.7"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>
  </LinearLayout>

  <!-- phone -->
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/diablo_phone"
              android:gravity="center"
              android:layout_weight="0.1"
              android:textSize="@dimen/label_font_size"
              android:textColor="@color/black"/>

    <EditText android:id="@+id/retailer_phone"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="@string/please_input_phone"
              android:inputType="phone|number"
              android:textSize="@dimen/ampm_label_size"
              android:textColor="@color/bpblack"
              android:textStyle="bold"
              android:selectAllOnFocus="true"
              android:layout_weight="0.7"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>
  </LinearLayout>

  <!-- address -->
  <LinearLayout android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="20dp">

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>

    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:text="@string/diablo_address"
              android:gravity="center"
              android:layout_weight="0.1"
              android:textSize="@dimen/label_font_size"
              android:textColor="@color/black"/>

    <EditText android:id="@+id/retailer_address"
              android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:hint="@string/please_input_address"
              android:inputType="text|textNoSuggestions"
              android:textSize="@dimen/ampm_label_size"
              android:textColor="@color/bpblack"
              android:textStyle="bold"
              android:selectAllOnFocus="true"
              android:layout_weight="0.7"/>
    <TextView android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:layout_weight="0.1"/>
  </LinearLayout>

</LinearLayout>
