<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="com.diablo.dt.diablo.fragment.sale.SaleOut">

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:gravity="center_vertical">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_person_black_24dp"
        android:text="@string/retailer"/>
    <AutoCompleteTextView
        android:id="@+id/sale_out_select_retailer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/please_input_retailer"
        android:completionThreshold="1"
        android:gravity="center_horizontal"
        android:selectAllOnFocus="true"
        android:layout_weight="0.8" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:drawableStart="@drawable/ic_place_black_24dp"
        android:layout_weight="0.2"
        android:text="@string/shop"/>
    <EditText
        android:id="@+id/sale_out_selected_shop"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:hint="@string/shop"
        android:layout_weight="0.8" />


    <ImageButton
        android:id="@+id/sale_select_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_date_range_black_24dp"
        android:contentDescription="@string/date"/>
    <EditText
        android:id="@+id/sale_out_selected_date"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:inputType="datetime"
        android:layout_weight="0.8"/>

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_person_black_24dp"
        android:contentDescription="@string/employee"/>
    <Spinner
        android:id="@+id/sale_out_select_employee"
        style="@style/Widget.AppCompat.Spinner.Underlined"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:layout_weight="0.8"/>

  </LinearLayout>

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_local_airport_black_24dp"
        android:text="@string/amount" />

    <EditText
        android:id="@+id/sale_out_total"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:focusable="false"
        android:hint="@string/amount"
        android:textColor="@color/red"
        android:gravity="center_horizontal"
        android:layout_weight="0.8"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:text="@string/retailer_balance" />
    <EditText
        android:id="@+id/sale_out_balance"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/retailer_balance"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:text="@string/should_pay" />
    <EditText
        android:id="@+id/sale_out_should_pay"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/should_pay"
        android:textColor="@color/colorPrimary"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_directions_subway_black_24dp"
        android:contentDescription="@string/cost_on_sale"/>
    <Spinner
        android:id="@+id/sale_out_select_extra_cost"
        android:layout_width="0dp"
        style="@style/Base.Widget.AppCompat.Spinner.Underlined"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:spinnerMode="dropdown"
        android:layout_weight="0.8"/>

  </LinearLayout>


  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:gravity="center_vertical"
      android:orientation="horizontal">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_insert_comment_black_24dp"
        android:contentDescription="@string/comment" />
    <EditText
        android:id="@+id/sale_out_comment"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/comment"
        android:layout_weight="0.8"/>


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_attach_money_black_24dp"
        android:text="@string/retailer_accBalance" />
    <EditText
        android:id="@+id/sale_out_accbalance"
        android:focusable="false"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/retailer_accBalance"
        android:gravity="center_horizontal"
        android:layout_weight="0.8" />


    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:drawableStart="@drawable/ic_remove_circle_outline_black_24dp"
        android:text="@string/verificate"/>
    <EditText
        android:id="@+id/sale_out_verificate"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/verificate"
        android:inputType="numberSigned|numberDecimal"
        android:selectAllOnFocus="true"
        android:gravity="center_horizontal"
        android:textColor="@color/red"
        android:layout_weight="0.8"/>


    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="0.2"
        android:src="@drawable/ic_attach_money_black_24dp"
        android:contentDescription="@string/cost_on_sale"/>
    <EditText
        android:id="@+id/sale_out_extra_cost"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/cost_on_sale"
        android:inputType="numberSigned|numberDecimal"
        android:layout_weight="0.8"/>

  </LinearLayout>


  <TableLayout
      android:id="@+id/t_sale_out_head"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
  </TableLayout>

  <ScrollView
      android:id="@+id/t_sale_out_scroll"
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_marginTop="10dp">
    <TableLayout
        android:id="@+id/t_sale_out"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    </TableLayout>
  </ScrollView>

</LinearLayout>
